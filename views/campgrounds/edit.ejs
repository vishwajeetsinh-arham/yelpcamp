        <div>
            <label for="title">Title</label>
            <input type="text" placeholder="enter txt"  id="title" name="campground[title]" value="<%=campground.title %>">
        </div>
        <div>
            <label for="location">location</label>
            <input type="text" placeholder="enter txt"  id="location" name="campground[location]" value="<%=campground.location %>" >
